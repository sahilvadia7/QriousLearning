<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>AllInOneOfServlet</display-name>
 
<!-- LifeCycle of servlet--> 
 <servlet>
 <servlet-name>lcs</servlet-name>
 <servlet-class>com.lifecycleofservlet.LifeCycleOfServlet</servlet-class>
 </servlet>
 
 <servlet-mapping>
 <servlet-name>lcs</servlet-name>
 <url-pattern>/lcs</url-pattern>
 </servlet-mapping>
 
 <!-- HttpServlet Method-->
  <servlet>
 <servlet-name>hsm</servlet-name>
 <servlet-class>com.lifecycleofservlet.HttpServletMethod</servlet-class>
 </servlet>
 
 <servlet-mapping>
 <servlet-name>hsm</servlet-name>
 <url-pattern>/hsm</url-pattern>
 </servlet-mapping>
 
 <!-- HttpServletRequest Methods-->
 
  <servlet>
 <servlet-name>hsreqm</servlet-name>
 <servlet-class>com.lifecycleofservlet.HttpServletRequestMethods</servlet-class>
 </servlet>
 
 <servlet-mapping>
 <servlet-name>hsreqm</servlet-name>
 <url-pattern>/hsreqm</url-pattern>
 </servlet-mapping>
 
 <!-- HttpServletResponse Methods-->
 
  <servlet>
 <servlet-name>hsresm</servlet-name>
 <servlet-class>com.lifecycleofservlet.HttpServletResponseMethods</servlet-class>
 </servlet>
 
 <servlet-mapping>
 <servlet-name>hsresm</servlet-name>
 <url-pattern>/hsresm</url-pattern>
 </servlet-mapping>
 
 
 <!-- Filter Lifecycle
  <filter>
 <filter-name>flc</filter-name>
 <filter-class>com.lifecycleofservlet.FilterLifeCycle</filter-class>
 </filter>
 
 <filter-mapping>
 <filter-name>flc</filter-name>
 <servlet-name>hsreqm</servlet-name>
 <dispatcher>INCLUDE</dispatcher>
 </filter-mapping>-->
 

 
</web-app>