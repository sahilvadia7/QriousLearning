<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>FirstServlet</display-name>
 	<servlet>
 	<servlet-name>add</servlet-name>
 	<servlet-class>com.fisrtservlet.AddServlet</servlet-class>
 	</servlet>
 	
 	<servlet-mapping>
 	<servlet-name>add</servlet-name>
 	<url-pattern>/add</url-pattern>
 	</servlet-mapping>
 	
 	<servlet>
 	<servlet-name>square</servlet-name>
 	<servlet-class>com.fisrtservlet.SquareServlet</servlet-class>
 	</servlet>
 	
 	<servlet-mapping>
 	<servlet-name>square</servlet-name>
 	<url-pattern>/SquareServlet</url-pattern>
 	</servlet-mapping>
 	
 	
 	
 	
 	<!-- Auth config-->
 	<servlet>
 	<servlet-name>register</servlet-name>
 	<servlet-class>com.fisrtservlet.auth.RegisterServlet</servlet-class>
 	</servlet>
 	
 	<servlet-mapping>
 	<servlet-name>register</servlet-name>
 	<url-pattern>/register</url-pattern>
 	</servlet-mapping>
 	
 	<servlet>
 	<servlet-name>login</servlet-name>
 	<servlet-class>com.fisrtservlet.auth.LoginServlet</servlet-class>
 	</servlet>
 	
 	<servlet-mapping>
 	<servlet-name>login</servlet-name>
 	<url-pattern>/login</url-pattern>
 	</servlet-mapping>
</web-app>